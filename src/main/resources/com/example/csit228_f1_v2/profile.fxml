<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="321.0" prefWidth="407.0" styleClass="back_ground" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228_f1_v2.HomeController">
    <VBox alignment="TOP_CENTER" layoutX="20.0" prefHeight="343.0" prefWidth="364.0" styleClass="right_box">
      <children>
         <Label prefHeight="66.0" prefWidth="364.0" styleClass="top_box" text="My Profile">
            <font>
               <Font name="SansSerif Regular" size="22.0" />
            </font>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <padding>
               <Insets left="10.0" />
            </padding></Label>
         <Pane prefHeight="162.0" prefWidth="63.0" styleClass="circle-container">
            <VBox.margin>
               <Insets bottom="6.0" left="150.0" right="150.0" top="6.0" />
            </VBox.margin>
            <!-- Content inside the circular pane -->
         </Pane>

         <Label prefHeight="18.0" prefWidth="372.0" text="First Name                                        Last Name">
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding></Label>
         <HBox prefHeight="16.0" prefWidth="364.0">
            <children>
               <TextField fx:id="prof_fname" prefHeight="26.0" prefWidth="195.0">
                  <HBox.margin>
                     <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                  </HBox.margin></TextField>
               <TextField fx:id="prof_lname" prefHeight="26.0" prefWidth="204.0">
                  <HBox.margin>
                     <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                  </HBox.margin></TextField>
            </children>
         </HBox>
         <Label prefHeight="18.0" prefWidth="374.0" text="Email">
            <padding>
               <Insets left="10.0" />
            </padding></Label>
         <TextField fx:id="prof_email" prefHeight="26.0" prefWidth="256.0">
            <VBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin></TextField>
         <Label prefHeight="18.0" prefWidth="406.0" text="Username">
            <padding>
               <Insets left="10.0" />
            </padding></Label>
         <TextField fx:id="prof_username">
            <VBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin></TextField>
         <Label prefHeight="18.0" prefWidth="401.0" text="Password">
            <padding>
               <Insets left="10.0" />
            </padding>
         </Label>
         <TextField fx:id="prof_password">
            <VBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
         </TextField>
         <HBox alignment="CENTER_RIGHT" prefHeight="6.0" prefWidth="344.0">
            <children>
               <Button mnemonicParsing="false" onAction="#deleteMyAccount" styleClass="red" text="Delete my account">
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </Button>
               <Button mnemonicParsing="false" onAction="#updateUserProfile" styleClass="create_account_btn" text="Save changes">
                  <HBox.margin>
                     <Insets left="10.0" />
                  </HBox.margin>
               </Button>
            </children>
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
         </HBox>
      </children>
    </VBox>

</AnchorPane>
